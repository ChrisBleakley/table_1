			countries = new Country(stdcoords[0], stdcoords[1], MAP, Integer[] links,
					ArrayList<Country> othercountries, Integer continent, Dimension panel_size);
		}
			
	}
	@Override
	public void paintComponent(Graphics g){
		
		
	}
